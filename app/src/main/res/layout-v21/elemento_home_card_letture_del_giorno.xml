<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="0dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:layout_marginTop="10dp"
    android:clickable="true"
    app:cardBackgroundColor="?colorePrincipale"
    app:cardPreventCornerOverlap="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/activated_background_light"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titolo_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:gravity="start|center_vertical"
            android:text="@string/letture_del_giorno"
            android:textColor="?coloreSecondario"
            android:textSize="@dimen/font_medio"
            android:textStyle="normal|bold" />

        <TextView
            android:id="@+id/data_odierna"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/bianco"
            android:textSize="@dimen/font_medio" />

        <TextView
            android:id="@+id/giorno_liturgia"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:gravity="start"
            android:text="@string/app_name"
            android:textColor="@color/bianco"
            android:textSize="@dimen/font_grande"
            android:textStyle="normal|bold" />
    </LinearLayout>

</android.support.v7.widget.CardView>