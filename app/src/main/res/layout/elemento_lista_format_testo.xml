<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/elementoListaCategoria"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="?coloreSfondo"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/linear_layout_categoria"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="18dp"
        android:layout_marginLeft="24dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <Button
            android:id="@+id/button_zoom_minus"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:background="@drawable/bottone_rosso"
            android:fontFamily="serif"
            android:text="T"
            android:textColor="@color/nero"
            android:textSize="14dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/text_zoom"
            android:layout_width="74dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="125%"
            android:textAlignment="center"
            android:textColor="?android:textColorPrimary"
            android:textSize="16dp" />

        <Space
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <Button
            android:id="@+id/button_zoom_plus"
            android:layout_width="80dp"
            android:layout_height="36dp"
            android:background="@drawable/bottone_rosso"
            android:fontFamily="serif"
            android:text="T"
            android:textColor="@color/nero"
            android:textSize="22dp" />

    </LinearLayout>

</LinearLayout>