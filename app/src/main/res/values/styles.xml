        <item name="android:datePickerDialogTheme" tools:targetApi="lollipop">
            @style/DatePicketThemeDark
        </item>
    </style>

    <style name="MyPreferenceTheme" parent="PreferenceThemeOverlay.v14.Material">
        <item name="preferenceCategoryStyle">@style/MyPreferenceCategoryStyle</item>
        <item name="android:textAppearanceListItemSecondary" tools:targetApi="lollipop">
            @style/TextAppearance.AppCompat.Menu
        </item>
        <item name="android:textAppearanceSmall">@style/TextAppearance.AppCompat.Menu</item>
        <item name="preferenceFragmentListStyle">@style/MyScrollBarStyle</item>
    </style>

    <style name="MyScrollBarStyle">
        <item name="android:scrollbarAlwaysDrawVerticalTrack">true</item>
        <item name="android:scrollbarStyle">outsideOverlay</item>
        <item name="android:scrollbars">vertical</item>
        <item name="android:paddingLeft">0dp</item>
        <item name="android:paddingRight">0dp</item>
        <item name="android:paddingStart" tools:targetApi="jelly_bean_mr1">0dp</item>
        <item name="android:paddingEnd" tools:targetApi="jelly_bean_mr1">0dp</item>
    </style>

    <style name="MyPreferenceCategoryStyle" parent="Preference.Category.Material">
        <item name="android:layout">@layout/my_preference_category_old</item>
    </style>

    <style name="ActionBarThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:textColorPrimary">@color/bianco</item>
        <item name="android:textColorSecondary">@color/bianco</item>
        <item name="colorAccent">@color/oro</item>
    </style>

    <style name="ActionBarPopUpThemeOverlay" parent="ThemeOverlay.AppCompat.Light">
        <item name="colorAccent">?colorePrincipale</item>
    </style>

    <style name="cursorColor" parent="Widget.AppCompat.AutoCompleteTextView">
        <item name="android:textCursorDrawable">@drawable/cursor</item>
    </style>

    <style name="ToolbarTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textSize">20dp</item>
        <item name="android:textColor">@color/bianco</item>
    </style>

    <style name="ToolbarSubTitleText" parent="TextAppearance.AppCompat.Widget.ActionBar.Subtitle">
        <item name="android:textSize">16dp</item>
        <item name="android:textColor">@color/bianco</item>
    </style>

    <style name="AlertTheme" parent="Theme.AppCompat.Light.Dialog.Alert" />

    <style name="AlertThemeDark" parent="Theme.AppCompat.Dialog.Alert" />

    <style name="DatePicketTheme" parent="android:Theme.Material.Light.Dialog" tools:targetApi="lollipop">
